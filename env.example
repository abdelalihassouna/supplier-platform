# Mistral AI API Key for Document Analysis
MISTRAL_API_KEY=your_mistral_api_key_here

# OpenAI API Key for AI-powered Document Verification
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Jaggaer API Configuration  
JAGGAER_BASE_URL=https://your-jaggaer-instance.com
JAGGAER_CLIENT_ID=your_client_id
JAGGAER_CLIENT_SECRET=your_client_secret

# Debug Mode (optional)
DEBUG_DOCUMENT_ANALYSIS=false

# Auto-Analysis During Sync (optional)
# When true, the sync route will immediately trigger analysis for each downloaded attachment
ANALYZE_DURING_SYNC=false

# Base URL for internal API calls (used when triggering analysis during sync)
# Example: http://localhost:3000 or https://your-domain
APP_BASE_URL=

# Queue-based analysis (Option B)
# When true, sync enqueues jobs to pg-boss instead of calling the analysis API directly
USE_QUEUE_FOR_ANALYSIS=false

# Connection string for pg-boss (falls back to POSTGRES_* if not provided)
# Example: postgres://user:password@localhost:5432/db_vai
DATABASE_URL=

# OCR cost mode (affects cost calculation in analysis)
# true => with annotation (3 EUR / 1000 pages), false => without annotation (1 EUR / 1000 pages)
ANALYSIS_WITH_ANNOTATION=false
